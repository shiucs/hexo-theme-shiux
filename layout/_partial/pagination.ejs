<% if (page.prev || page.next) { %>
  <div class="my-4 flex justify-between px-4 md:px-0">
    <% if (page.prev) { %>
      <a href="<%= url_for(page.prev_link) %>" class="btn btn-white">
        <i class="ri-arrow-left-line mr-4"></i>
        <%= theme.paperwork.prevPage || '上一页' %>
      </a>
    <% } %>
    
    <% if (page.next) { %>
      <a href="<%= url_for(page.next_link) %>" class="btn btn-white">
        <%= theme.paperwork.nextPage || '下一页' %>
        <i class="ri-arrow-right-line ml-4"></i>
      </a>
    <% } %>
  </div>
<% } %>